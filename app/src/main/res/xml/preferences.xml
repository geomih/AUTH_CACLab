<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/pref_header_language">
        <ListPreference
            android:key="@string/lang_key"
            android:title="@string/select_lang"
            android:defaultValue="GR"
            android:entries="@array/langs"
            android:entryValues="@array/pref_list_values"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_header_about">
        <com.mythesis.michaigp.authcaclab.AboutDialogPreference
            android:key="about"
            android:title="@string/pref_about"
            android:dialogMessage="@string/about_dialog_message"
            android:positiveButtonText="OK"
            android:negativeButtonText=""
            />
    </PreferenceCategory>

</PreferenceScreen>